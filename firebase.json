{
  "database": {
    "rules": "firebase/database.rules.json"
  },
  "hosting": {
    "public": "public",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**", "bundles/!(firebase*)"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "functions": {
      "source": "firebase/functions"
    }
  }
}
